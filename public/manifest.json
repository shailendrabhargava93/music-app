{
  "name": "Wave Music - Stream Your Favorite Songs",
  "short_name": "Wave Music",
  "description": "Stream your favorite music with Wave Music App",
  "lang": "en-US",
  "dir": "ltr",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "orientation": "portrait",
  "theme_color": "#00BCD4",
  "background_color": "#1a1a1a",
  "categories": ["music", "entertainment"],
  "id": "com.wavemusic.app",
  "screenshots": [
    {
      "src": "/screenshots/screenshot-540.png",
      "sizes": "540x720",
      "form_factor": "narrow",
      "type": "image/png"
    },
    {
      "src": "/screenshots/screenshot-1280.png",
      "sizes": "1280x720",
      "form_factor": "wide",
      "type": "image/png"
    }
  ],
  "icons": [
    {
      "src": "/wave-logo.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/wave-logo.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "maskable"
    },
    {
      "src": "/wave-logo.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    }
  ],
  "iarc_rating_id": "e84b9618-a2dd-4d03-9067-2d47d7146205",
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.wavemusic.app",
      "id": "com.wavemusic.app"
    }
  ],
  "prefer_related_applications": false,
  "scope_extensions": [
    {
      "origin": "https://saavn-api-client.vercel.app"
    },
    {
      "origin": "https://charts.soundcharts.com"
    }
  ],
  "shortcuts": [
    {
      "name": "Search Music",
      "short_name": "Search",
      "description": "Search for your favorite songs",
      "url": "/index.html?shortcut=search",
      "icons": [
        {
          "src": "/wave-logo.svg",
          "sizes": "any",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Favorites",
      "short_name": "Favorites",
      "description": "View your favorite songs",
      "url": "/index.html?shortcut=favorites",
      "icons": [
        {
          "src": "/wave-logo.svg",
          "sizes": "any",
          "type": "image/svg+xml"
        }
      ]
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "audio/*": [".mp3", ".m4a", ".wav", ".ogg", ".flac", ".aac"]
      },
      "icons": [
        {
          "src": "/wave-logo.svg",
          "sizes": "any",
          "type": "image/svg+xml"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "launch_handler": {
    "client_mode": ["navigate-new", "auto"]
  },
  "protocol_handlers": [
    {
      "protocol": "web+wavemusic",
      "url": "/index.html?protocol=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "widgets": [
    {
      "name": "Now Playing",
      "short_name": "Playing",
      "description": "Shows the currently playing song",
      "tag": "now-playing-widget",
      "screenshot": [
        {
          "src": "/wave-logo.svg",
          "sizes": "any",
          "form_factor": "all",
          "type": "image/svg+xml"
        }
      ],
      "icons": [
        {
          "src": "/wave-logo.svg",
          "sizes": "any",
          "type": "image/svg+xml"
        }
      ],
      "data": {
        "url": "/index.html"
      }
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  }
}
